FROM centos:7

# install rpm build tools
RUN yum update -y && \
  yum install -y rpm-build make gcc libseccomp-devel git && \
  mkdir -p /root/rpmbuild/SPECS && \
  mkdir -p /root/rpmbuild/SOURCES

# install golang
RUN curl -fsSL https://dl.google.com/go/go1.14.6.linux-amd64.tar.gz | tar -xzC /usr/local
ENV PATH=/usr/local/go/bin:$PATH:/root/go/bin

RUN go get github.com/cpuguy83/go-md2man

